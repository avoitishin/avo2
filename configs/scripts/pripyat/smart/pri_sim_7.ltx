[smart_terrain]
squad_id = 30
max_population = 1
;respawn_only_smart = true
respawn_params = respawn@pri_sim_7

[respawn@pri_sim_7]
spawn_pseudodog
spawn_flesh
spawn_snork

[spawn_pseudodog]
spawn_squads = simulation_flesh, simulation_flesh, simulation_boar, simulation_boar, simulation_snork
spawn_num = {=actor_on_level(pripyat)} 2, 0

[spawn_flesh]
spawn_squads = simulation_flesh, simulation_flesh, simulation_flesh, simulation_boar
spawn_num = {=actor_on_level(pripyat)} 1, 0

[spawn_snork]
spawn_squads = simulation_flesh, simulation_flesh, simulation_boar, simulation_boar, simulation_gigant, simulation_chimera
spawn_num = {=actor_on_level(pripyat)} 1, 0
